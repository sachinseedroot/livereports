<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/primary_light"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="70dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:text="Sign in with your account"
          android:textSize="10pt"
          android:id="@+id/logintext"
          android:textColor="@android:color/white"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/l1"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="  User Id"
            android:id="@+id/e1"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="@drawable/roundcorners"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/l2"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint=" Password"
            android:id="@+id/e2"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="@drawable/roundcorners"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="15dp"
        android:id="@+id/l3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/roundercornerbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView

            android:layout_centerInParent="true"
            android:id="@+id/btngo"
            android:layout_width="wrap_content" android:textColor="@android:color/white" android:text="Sign In"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>